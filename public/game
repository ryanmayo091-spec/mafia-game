<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Mafia Game – Home</title>
  <link rel="stylesheet" href="style.css" />
</head>
<body>
  <div class="nav">
    <div class="container">
      <div class="brand">Mafia Game</div>
      <a id="nav-home" href="/game">Home</a>
      <a id="nav-robbery" href="/robbery">Robbery</a>
      <a id="nav-nightlife" href="/nightlife">Nightlife</a>
      <a id="nav-benefits" href="/benefits">Benefits</a>
      <div class="right"><button onclick="doLogout()">Logout</button></div>
    </div>
  </div>

  <div class="container">
    <h1>Your Mafia HQ</h1>

    <div class="grid">
      <div class="card">
        <h3>Profile</h3>
        <button id="refresh">Refresh Stats</button>
        <pre id="stats">Loading…</pre>
      </div>

      <div class="card">
        <h3>Quick Crime</h3>
        <div class="badge">50/50 chance</div>
        <div class="row"><button id="do-crime">Do Crime</button></div>
        <pre id="log">Ready.</pre>
      </div>
    </div>
  </div>

  <script src="common.js"></script>
  <script>
    requireAuth();
    setActive("nav-home");

    const $ = (id) => document.getElementById(id);

    async function loadProfile() {
      try {
        const data = await api("/profile");
        $("stats").textContent = JSON.stringify(data.profile || data, null, 2);
      } catch (e) {
        $("stats").textContent = JSON.stringify(e, null, 2);
        if (e.error === "Not logged in") doLogout();
      }
    }

    async function quickCrime() {
      try {
        const data = await api("/crime", { method:"POST" });
        $("log").textContent = JSON.stringify(data, null, 2);
        loadProfile();
      } catch (e) { $("log").textContent = JSON.stringify(e, null, 2); }
    }

    $("refresh").addEventListener("click", loadProfile);
    $("do-crime").addEventListener("click", quickCrime);
    loadProfile();
  </script>
</body>
</html>
