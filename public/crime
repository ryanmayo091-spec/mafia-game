  <script>
    requireAuth(); setActive("nav-robbery");

    // Very basic: call /crime once; you can add /crime?type=bank later
    document.getElementById("rob").addEventListener("click", async () => {
      const type = document.getElementById("robberyType").value;
      try {
        const data = await api("/crime", { method:"POST", body: { type } });
        document.getElementById("result").textContent = JSON.stringify({ type, ...data }, null, 2);
      } catch (e) {
        document.getElementById("result").textContent = JSON.stringify(e, null, 2);
      }
    });
  </script>
